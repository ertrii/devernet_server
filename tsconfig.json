{
  "compilerOptions": {
    "experimentalDecorators": true,
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "outDir": "lib",
    "sourceMap": false,
    "strict": true,
    "target": "ES6",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true
  },
    "compileOnSave": true,
    "include": [
        "src",
        "graphql.d.ts"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts",
        "lib",
        "dist",
        "types"
  ]
}
